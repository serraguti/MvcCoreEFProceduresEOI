@model IEnumerable<MvcCoreEFProcedures.Models.Empleado>

@{
    int registros = (int)ViewData["REGISTROS"];
    //PARA MI DIBUJO, ME DECLARO UNA VARIABLE NUMERO DE PAGINA
    int numeropagina = 1;
}

@{
    ViewData["Title"] = "Index";
}

<ul class="list-group-horizontal">
    @for (int i = 1; i <= registros; i += 3)
    {
        <li class="list-group-item">
            <a asp-controller="Empleados"
                asp-action="Index"
                asp-route-posicion="@i">
                Página @numeropagina
            </a>
        </li>
        numeropagina += 1;
    }
</ul>

<h1>Empleados</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
